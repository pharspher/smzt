<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.chichizaza.shenmozhita.board.BoardView
        android:id="@+id/boardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/comboTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5c"
        android:gravity="left"
        app:layout_constraintBottom_toBottomOf="@+id/solveButton"
        app:layout_constraintTop_toTopOf="@+id/solveButton"
        app:layout_constraintEnd_toStartOf="@id/solveButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/solveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solve"
        app:layout_constraintBottom_toTopOf="@+id/boardView"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>